@using BethanysPieShop.Models
@model IEnumerable<Pie>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <h2> @ViewBag.Title</h2>
    @foreach (var pie in Model)
    {
        <div>
            <h2>@pie.Name</h2>
            <h3>@pie.Price.ToString("c")</h3>
        </div>

    }
</body>
</html>